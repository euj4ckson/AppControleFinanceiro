<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.Views.TransactionList"
             Title="Listagem"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary Source="/Resources/Styles/Colors.xaml"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <CollectionView x:Name="CollectionViewTransaction">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" ColumnDefinitions="50,*,auto">
                        <Label Text="{Binding Initial}" BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" TextColor="#BABABA"/>
                        </VerticalStackLayout>
                        <Label Text="{Binding Value, StringFormat='{0:C}'}" Grid.Column="2" VerticalOptions="Center" TextColor="{StaticResource Tertiary}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Edit" HorizontalOptions="Center"  Clicked="OnButtonClicked_to_TransactionEdit"/>
        <Border Margin="10" Padding="15" StrokeShape="RoundRectangle 30" Background="{StaticResource Black}" Stroke="Transparent">
            <Grid ColumnDefinitions="*,80" RowDefinitions="auto,auto,30,auto,auto">
                <Label Padding="10,0" Text="Saldo" TextColor="#979797" FontSize="18"/>
                <Label Padding="10,0" x:Name="LabelBalance"  Grid.Row="1" TextColor="White" FontSize="36" />
                <Button CornerRadius="54" Padding="0" FontSize="48" WidthRequest="54" HeightRequest="54" Grid.Column="1" Grid.RowSpan="2" Text="+" HorizontalOptions="Center" Clicked="OnButtonClicked_to_TransactionAdd"/>

                <Label Padding="10,0"  Grid.Row="3" Text="Receitas" TextColor="#979797" FontSize="8"/>
                <Label Padding="10,0" Grid.Row="4" x:Name="LabelIncome"  FontSize="12" TextColor="White"/>

                <Label Text="Despesas" Grid.Row="3" Grid.Column="1" FontSize="8" TextColor="#979797"/>
                <Label  Grid.Row="4" x:Name="LabelExpense" FontSize="12" Grid.Column="1" TextColor="White"/>
            </Grid>
         </Border>
    </VerticalStackLayout>
</ContentPage>