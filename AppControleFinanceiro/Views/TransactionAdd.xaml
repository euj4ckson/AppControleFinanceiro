<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.Views.TransactionAdd"
             Title="TransactionAdd">
    <VerticalStackLayout Spacing="10">
        <Border BackgroundColor="#000000" Margin="15" Padding="15" Stroke="Transparent" StrokeShape="RoundRectangle 30">
            <Grid RowDefinitions="Auto" ColumnDefinitions="*,30">
                <Label
                    VerticalOptions="Center"
                    Text="Novo"
                    HorizontalOptions="Center"
                    Grid.Row="0" Grid.Column="0" TextColor="White"/>
                <Image WidthRequest="17"  Source="close.png" HorizontalOptions="Center" Grid.Row="0" Grid.Column="1">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>            
            </Grid>
        </Border>
        <Label TextColor="Red" x:Name="LabelError" IsVisible="False" Margin="30"/>
        <Grid ColumnDefinitions="*,*" Margin="30,0">
            <RadioButton x:Name="RadioIncome" IsChecked="True" Content="Receita"/>
            <RadioButton x:Name="RadioExpense" HorizontalOptions="End"  Content="Despesa" Grid.Column="1"/>
        </Grid>
        <Entry x:Name="EntryName" Placeholder="Nome" Margin="15"/>
        <DatePicker x:Name="DatePickerDate" Margin="15"/>
        <Entry x:Name="EntryValue" Placeholder="Valor" Margin="15"/>
        <Button Clicked="OnButtonClicked_Save" Text="Salvar" Margin="15" BackgroundColor="Green" HorizontalOptions="Center"/>
    </VerticalStackLayout>

    


</ContentPage>